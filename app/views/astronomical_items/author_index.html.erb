<h2><u>Your Astronomical Objects</u></h2>

<% if @astronomical_items.present?%>
    <div class="table">
        <table class="table table-dark table-striped">
            <thead>
                <th class="table_head">Object Name</th>
                <th class="table_head">Category</th>
            </thead>

            <tbody>
                <% @astronomical_items.each do |astronomical_item| %>
                    <tr>
                        <td> <%= link_to astronomical_item.name, astronomical_item %></td>
                        <td> <%= astronomical_item.category %> </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% else %>
    <p class="empty_list">You have not added any objects to the catalogue</p>
<% end %>